{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["src/*", "dist/*"],
      "@common/*": ["src/common/*", "dist/common/*"],
      "@user/*": ["src/user/*", "dist/user/*"],
      "@dispatch/*": ["src/dispatch/*", "dist/dispatch/*"]
    }
  },
  "exclude": ["node_modules"]
}
